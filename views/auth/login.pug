extends ../layout/index

block content
   div.py-10 
      a(href="/")
         h1.text-4xl.my-5.font-extrabold.text-center REAL
            spam.font-light ESTATE
      h2.text-center.text-2xl.font-bold= page 
      
      if errors 
         div(class="max-w-md mx-auto my-10")
            each error in errors    
               p.bg-gray-300.text-red-600.uppercase.text-xs.text-center.p-1.mb-1.font-bold=error.msg
      
      div.mt-6.mx-auto.max-w-md
         div.bg-white.py-8.px-4.shadow
            form.space-y-3(method="POST" action="/auth/login")
               input(type="hidden" name="_csrf" value=csrfToken)
               div   
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Email
                  input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your email' type='email' name='email')
               div 
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Password
                  input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your password' type='password' name='password')
               div.flex.items-center.justify-between
                  a(class= "text-gray-400 text-xs hover:underline underline-offset-6" href="/auth/signup") Don't you have an account? Sign up
                  a(class= "text-gray-400 text-xs hover:underline underline-offset-6" href="/auth/forgotten-password") I forgot my password
               input(class="w-full bg-red-800 text-gray-300 rounded-md py-2 cursor-pointer hover:bg-gray-300 hover:text-red-800" type='submit' value='LogIn')