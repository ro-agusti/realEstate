extends ../layout/index

block content
   div.py-10 
      h1.text-4xl.my-5.font-extrabold.text-center REAL
         spam.font-light ESTATE
      h2.text-center.text-2xl.font-bold= page 

      if errors 
         div(class="max-w-md mx-auto my-10")
            each error in errors    
               p.bg-gray-300.text-red-600.uppercase.text-xs.text-center.p-1.mb-1.font-bold=error.msg

      div.mt-6.mx-auto.max-w-md
         div.bg-white.py-8.px-4.shadow
            form.space-y-3(method="POST" action="/auth/signup" noValidate)
               input(type="hidden" name='_csrf' value= csrfToken)
               div   
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='name') Name
                  input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your name' type='text' name='name' value= user ? user.name : '')
               div   
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Email
                  input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your email' type='email' name='email' value= user ? user.email : '')
               div 
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Password
                  input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your password' type='password' name='password')
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='repeat_password') Repeat password
                  input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Repeat password' type='password' name='repeat_password')
               div.flex.items-center.justify-between
                  a(class= "text-gray-400 text-xs hover:underline underline-offset-6" href="/auth/login") Already have an account? Log in
                  a(class= "text-gray-400 text-xs hover:underline underline-offset-6" href="/auth/forgotten-password") I forgot my password
               input(class="w-full bg-gray-600 text-gray-300 rounded-md py-2 cursor-pointer hover:bg-gray-300 hover:text-gray-600" type='submit' value='Create account')