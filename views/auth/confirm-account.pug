extends ../layout/index

block content
    div.py-10 
        h1.text-4xl.my-5.font-extrabold.text-center REAL
            spam.font-light ESTATE
        h2.text-center.text-2xl.font-bold= page 
    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
        p(class= error ? 'bg-red-200' : 'bg-green-100').py-2.px-5.rounded-lg.w-full.font-bold.text-center.uppercase= message

        if !error
            a(href="/auth/login" class="text-center font-bold text-sm text-slate-500 uppercase mt-10 block") You can LogIn now