extends ./layout/app 

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content 

    div(class="py-5")
        h1(class="text-center text-2xl font-extrabold text-gray-600 uppercase") Location on the map
    
        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-600 font-bold") Filter properties

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categories" class="text-sm w-24 uppercase text-gray-400 font-bold") Categories
                select(id="categories" class="flex-1 bg-white w-full px-3 py-2 border broder-gray-300 rounded-md shadow")
                    option(value="") - select -
                    each category in categories     
                        option(value=category.id)=category.name

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="prices" class="text-sm w-24 uppercase text-gray-400 font-bold") Prices
                select(id="prices" class="flex-1 bg-white w-full px-3 py-2 border broder-gray-300 rounded-md shadow")
                    option(value="") - select -
                    each price in prices     
                        option(value=price.id)=price.name

        div(id="map-homepage" class="h-[500px] mt-5")

        section(class="py-5")
            h5(class="text-center text-4xl font-extrabold pt-10 text-gray-700") Houses for sale
            div(class=" grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each property in houses    
                    include ./templates/card

        section(class="py-5")
            h5(class="text-center text-4xl font-extrabold pt-10 text-gray-700") Apartments for sale
            div(class=" grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each property in apartments    
                    include ./templates/card


block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapHomepage.js") 