extends ../layout/admin

block styles
   meta(name="csrf-token" content= csrfToken)

block content
   div.py-10 
      h1.text-4xl.my-5.font-extrabold.text-center REAL
         spam.font-light ESTATE
      h2.text-center.text-2xl.font-bold= page

      a(href="/properties/create" class="rounded-md my-4 py-2 px-10 mx-3 bg-red-700 text-gray-100 text-sm font-bold text-center uppercase cursor-pointer hover:bg-gray-300 hover:text-red-700 inline-block w-full sm:w-auto") Publish Property  

      //- pre= JSON.stringify(properties, undefined,2)

      if properties.length

         div(class="bg-white shadow rounded-lg")
            ul(class="divide-y divide-gray-200")
               each property of properties 
                  li 
                     div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between  md:space-y-0 gap-4")
                        div(class="sm:w-1/4 md:w-1/6 ")
                           img(src=`uploads/${property.images}` alt=`Property image ${property.title}` class="w-full block")
                        div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-1") 
                           a(class="block text-1xl font-extrabold text-gray-600 uppercase" href=`property/${property.id}`)=property.title
                           p(class="text-sm text-gray-500 font uppercase")=property.category.name
                           p(class="text-sm text-gray-500 flex items-center ")
                              svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6")
                                 path(stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z")
                              =property.price.name
                        
                           a(href= `/messages/${property.id}` class="text-sm text-gray-500 cursor-pointer font-bold uppercase")= `${property.messages.length} Messages` 

                        div(class="sm:w-1/4 md:w-2/6 lg:w-1/6 flex flex-col 2xl:flex-row gap-2")

                           button(type="button" data-property-id=`${property.id}` class=`change-status  w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer ${property.published ? 'bg-gray-100 text-gray-600 hover:bg-gray-300' : 'bg-gray-300 text-gray-600 hover:bg-gray-100'}`)=`${property.published ? 'Published' : 'No published'}`

                           a(href=`/properties/edit/${property.id}` class="px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-gray-100 text-gray-800 text-center hover:bg-gray-300") Edit

                           form(method="POST" action=`/properties/delete/${property.id}`)
                              input(type="hidden" name="_csrf" value= csrfToken)
                              input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-gray-100 text-gray-800 hover:bg-gray-300` value=`Delete`)
            div(class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6")

               div(class="flex-1 flex justify-between sm:hidden")
                  a(href=`/my-properties?page=${actualPage - 1}` class= `${actualPage === 1 ? 'pointer-events-none' : ' '} relative inline-flex items-center px-4 py-2 border border-red-800 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50`) Previous
                  a(href=`/my-properties?page=${actualPage + 1}` class= `${actualPage === pages ? 'pointer-events-none' : ' '} relative inline-flex items-center px-4 py-2 border border-red-800 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50`) Next

               div(class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between") 
                  p(class="text-sm text-gray-700 gap-2") Showing  
                     span(class="font-medium") #{offset + 1} to  
                     span(class="font-medium") #{total < limit + offset ? total : limit + offset} of  
                     span(class="font-medium") #{total} results

               div(class="hidden sm:block")
                  nav(class="relative z-0 inline-flex rounded-md shadow-md")  
                     -var n = 1;
                        while n <= pages
                           a(href=`/my-properties?page=${n}` class=` ${actualPage == n ? 'bg-red-100 border-red-700 text-red-700' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-100' } relative inline-flex items-center px-4 py-2 border text-sm font-medium`) #{n++}      
      else 
         p.text-center No properties

block scripts 
   script(src="/js/changeStatus.js") 